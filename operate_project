#!/bin/sh

#------------------------------------------------------------------------------------------
#
# PURPOSE
# -------
# Build and Run The Neural Network Project
#
# AUTHOR
# ------
# Lumberjacks Incorperated (2018)
#
#------------------------------------------------------------------------------------------

#------------------------------------------------------------------------------------------
# MAIN
#------------------------------------------------------------------------------------------
main()
{
    echo "\n>> Building..."
    build
    echo ">> done\n"
    
    echo "\n>> Running...\n"
    run
    echo ">> done\n"
}

#------------------------------------------------------------------------------------------
# INTERNAL FUNCTIONS
#------------------------------------------------------------------------------------------
function build()
{
	rm -r ./bin
	rm -r ./build
	mkdir build
	mkdir bin
	cd build
	cmake ..
	make
}

function run()
{
	cd ../bin
	#./neuralNetworkProject
	./neuralNetworkProject
}

#------------------------------------------------------------------------------------------
# SCRIPT
#------------------------------------------------------------------------------------------
    main
